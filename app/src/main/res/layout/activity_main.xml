<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BEGIN MAIN ACTIVITY BUTTONS AND TEXT FIELDS-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/startActivityUpdates"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/getLoc"
            android:onClick="startMyActivityRecognitionIntentService"
            android:text="Start Activity" />

        <Button
            android:id="@+id/stopActivityUpdates"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/getLoc"
            android:onClick="stopActivityUpdates"
            android:text="Stop Activity" />

        <TextView
            android:id="@+id/periodicAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startActivityUpdates"
            android:layout_centerHorizontal="true"
            android:text="Periodically Updated Activity"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/getLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:onClick="getLocClicked"
            android:text="Get Location" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/getLoc"
            android:layout_alignStart="@+id/getLoc"
            android:layout_below="@+id/getLoc"
            android:text="Press Get Location" />

        <TextView
            android:id="@+id/periodicLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Periodically Updated Location"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/startLocationUpdates"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/periodicLoc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="startLocationUpdates"
            android:text="Start Updates" />

        <Button
            android:id="@+id/stopLocationUpdates"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/periodicLoc"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:onClick="stopLocationUpdates"
            android:text="Stop Updates" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addressButton"
            android:layout_alignEnd="@+id/getLoc"
            android:layout_alignLeft="@+id/loc"
            android:layout_alignRight="@+id/getLoc"
            android:layout_alignStart="@+id/loc"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/addressButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/startLocationUpdates"
            android:layout_centerHorizontal="true"
            android:onClick="startMyGeoCoderIntentService"
            android:text="Get Last Location Address" />

    </RelativeLayout>
    <!--END BUTTONS AND TEXT FIELDS-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.uf.nomad.mobitrace.android_activity.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>

